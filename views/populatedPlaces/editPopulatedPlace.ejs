<%- include('../header') %>
    <div class="row-sm-8">
        <div>
            <a type="button" class="btn btn-primary" href="/getAllPopulatedPlaces">Go back</a>
        </div>
    </div>
    <br>
    <form method="post" action="/editPopulatedPlaceById/<%= populatedPlace.NM_IDENTIFIKATOR %>">
        <div class="form-group">
            <label for="stateId">State ID: <%= populatedPlace.DR_IDENTIFIKATOR %></label>
            <input type="hidden" class="form-control" id="stateId" name="stateId" value="<%= populatedPlace.DR_IDENTIFIKATOR %>">
        </div>
        <div class="form-group">
            <!-- <label type="hidden" for="populatedPlaceID">Place ID</label> -->
            <input type="hidden" class="form-control" id="id" name="id" value="<%= populatedPlace.NM_IDENTIFIKATOR %>" >
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= populatedPlace.NM_NAZIV %>"">
        </div>
        <div class="form-group">
            <label for="pttCode">PTT Code</label>
            <input type="text" class="form-control" id="pttCode" name="pttCode" value="<%= populatedPlace.NM_PTT_CODE %>"">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <br><br>
    </form>

<%- include('../footer') %>